{
  "name": "matchanalyzer",
  "version": "1.0.0",
  "description": "Software to control match stats",
  "scripts": {
    "installClient": "cd client && npm i",
    "installServer": "cd server && npm i",
    "build": "cd client && npm run build",
    "serve": "cd server && npm start",
